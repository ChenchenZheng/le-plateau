
<div class="search-bar">
  <%= form_tag events_path, method: :get, id: 'search-category-global' do %>
    <div class="search-category">
      <%= text_field_tag :location,
        params[:location],
        class: " form-control",
        placeholder: "Où",
        id: "event_address"
      %>
    </div>
    <div class="search-category">
      <%= select "",
        :category,
        %w[Espionnage Ludique Rapidité Ruse Stratégie],
        {prompt: "Catégorie", selected: params[:category]},
        {class: "form-control"}
      %>
    </div>
    <div class="search-category">
      <%= select "",
        :level,
        %w[Facile Moyen Difficile],
        {prompt: "Niveau", selected: params[:level]},
        {class: "form-control"}
      %>
    </div>
    <div class="search-button">
      <%= button_tag type: 'submit', class: "btn btn-search rounded-pill ms-n3" do %>
        <i class="fa fa-search"></i>
      <% end %>
    </div>
  <% end %>
</div>

<% if params[:location].present? || params[:category].present? || params[:level].present? %>
  <div class="search-results">
    <% if @events.size == 1 %>
      <h3> 1 résultat trouvé</h3>
    <% elsif  @events.size > 1%>
      <h3><%= @events.size %> résultats trouvés</h3>
    <% else %>
      <h3>Aucun évènement correspondant à votre recherche...</h3>
    <% end %>
  </div>
<% end %>

<div class= "container mb-3 rounded"
     id="map"
     style="width: 100%; height: 500px;"
     data-markers="<%= @markers.to_json %>"
