<h1>This is the edit page</h1>
<div class="container w-50">
  <%= simple_form_for @event do |f| %>
    <%= f.association :boardgame, label: "Name of board game", include_blank: false %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :nb_players %>
    <%= f.input :start_time %>
    <%= f.input :end_time%>
    <%= f.button :submit, "Create event" %>
    <%= link_to "Back", events_path %>
  <% end %>
</div>
